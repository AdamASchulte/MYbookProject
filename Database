package Files;

import java.util.ArrayList;
import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;

public class fakeDatabase {
	
	private ArrayList<fakeRecipe> recipeList = new ArrayList<fakeRecipe>();
	
	public fakeDatabase()
	{
		
	}
	
	public void fillDatabase()
	{
		fakeRecipe myFakeRecipe = new fakeRecipe();
		try {
		File bruh = new File("RecipeDatabase.txt");
		Scanner reader = new Scanner(bruh);
		
		while(reader.hasNextLine())
		{
			int i = 0;
			String[] recipes = reader.nextLine().split(",");
			for(int k = 0; k < recipes.length; k++)
			{
				recipes[k] = recipes[k].trim();
			}
			myFakeRecipe = new fakeRecipe(recipes);
			recipeList.add(myFakeRecipe);
			i++;
		}
		
		}
		catch(FileNotFoundException e)
		{
			System.out.println("did not work");
			
		}
		return;
	}
	
	public void printInfo()
	{
		for(int i = 0; i < 20; i++)
		{
			fakeRecipe temp = new fakeRecipe();
			temp = recipeList.get(i);
			System.out.println(temp.getName());
			System.out.println(temp.getTime());
			System.out.println(temp.getMicrowaveable());
			ArrayList<String> bruh;
			bruh = temp.getIngredientList();
			int x = bruh.size();
			for(int j = 0; j < x; j++)
			{
			System.out.println(bruh.get(j));
			}
		}
		
	}
	
	public ArrayList<fakeRecipe> getFakeRecipes()
	{
		return recipeList;
	}
}
