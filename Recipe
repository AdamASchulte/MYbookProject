package RecipeBook;
import java.util.ArrayList;

public class Recipe {
	protected int time;
	protected String name;
	protected String[] ingredientList;
	protected String microwaveable;
	
	protected Recipe(String[] info)
	{
		name = info[1];
		time = Integer.parseInt(info[2]);;
		microwaveable = info[3];
		for(int i = 0; i < info.length - 3; i++)
		{
			ingredientList = new String[info.length - 3];
			ingredientList[i] = info[i+3];
		}
		
	}
	public String getName()
	{
		return name;
	}
	
	public int getTime()
	{
		return time;
	}
	
	public String getMicrowaveable()
	{
		return microwaveable;
	}
	
	public String[] getIngredientList()
	{
		return ingredientList;
	}
}
